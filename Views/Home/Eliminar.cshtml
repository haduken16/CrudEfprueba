@model CRUDWebEf.Models.ViewsModel.ProductoVM
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Eliminar Producto
    </div>
    <div class="card-body">
        <form asp-action="Eliminar" asp-controller="Home" method="post">
            <input asp-for="oProducto.IdProducto" type="hidden" class="form-control">

            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar el producto: @Html.DisplayTextFor(m => m.oProducto.DescripcionPr)?
            </div>

            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>


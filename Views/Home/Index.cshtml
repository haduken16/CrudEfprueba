@model List<CRUDWebEf.Models.TbProducto>
@{
    ViewData["Title"] = "Productos";
}

<div class="text-center">
    <h1 class="display-4">Bienvenidos</h1>
</div>

<div class="card">
    <div class="card-header">
        Lista de Productos
    </div>
    <div class="card-body">
        <div>
            <a asp-action="ProductoDetalle" asp-controller="Home" asp-route-IdProducto="0" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Nuevo</a>
            <a asp-action="Descargar" asp-controller="Home" class="btn btn-success"><i class="bi bi-table"></i> Descargar</a>
        </div>
        
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Descripción</th>
                    <th>Marca</th>
                    <th>Medida</th>
                    <th>Categoría</th>
                    <th>Stock</th>
                    <th>Precio</th>
                    <th width="150px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdProducto</td>
                        <td>@item.DescripcionPr</td>
                        <td>@item.Marca</td>
                        <td>@item.oMedida.DescripcionMe</td>
                        <td>@item.oCategoria.DescripcionCa</td>
                        <td>@item.Stock</td>
                        <td>@item.Precio</td>
                        <td>
                            <a asp-action="ProductoDetalle" asp-controller="Home" class="btn btn-primary btn-sm" asp-route-IdProducto="@item.IdProducto">Editar</a>
                            <a asp-action="Eliminar" asp-controller="Home" class="btn btn-danger btn-sm" asp-route-IdProducto="@item.IdProducto">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
